{
  "AllowedHosts": "*",
  "API": {
    "Title": "sd-api-title",
    "Description": "A the default sample description of a StackedDeck API. Please change this value in your configuration.",
    "CorsOrigins": ["*"],
    "Identifier": "api-identifier"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Exceptions",
      "Destructurama.Attributed"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Properties": {
      "CorrelationId": "None"
    },
    "Destructure": [
      {
        "Name": "UsingAttributes"
      }
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "formatter": {
                  "Type": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact",
                  "Args": {
                    "renderMessage": true
                  }
                }
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails",
      "WithClientIp",
      {
        "Name": "WithCorrelationId",
        "Args": {
          "addValueIfHeaderAbsence": true,
          "headerName": "x-correlation-id"
        }
      }
    ]
  }
}
