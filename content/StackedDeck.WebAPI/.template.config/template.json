{
  "$schema": "http://json.schemastore.org/template",
  "author": "Vasil Kotsev",
  "name": "Stacked Deck Web API",
  "description": "Creates an ASP.NET Core Web API solution with sensible defaults.",
  "classifications": [
    "Web",
    "ASP.NET",
    "Web API",
    "API",
    "Docker",
    "Solution",
    "Stacked Deck"
  ],
  "precedence": 1507,
  "identity": "StackedDeck.WebAPI",
  "groupIdentity": "StackedDeck.WebAPI",
  "shortName": "sd-webapi",
  "defaultName": "StackedDeckWebApi",
  "sourceName": "StackedDeck.WebAPI.Template",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "symbols": {
    "title": {
      "type": "parameter",
      "datatype": "text",
      "description": "The API's title, used primarily for the Open API specification.",
      "defaultValue": "StackedDeck Web Service",
      "replaces": "sd-api-title"
    },
    "routePrefix": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "description": "The service's path prefix, which will be used in the base controller. (e.g., 'reference')",
      "replaces": "sd-api-route-prefix"
    },
    "dockerImageName": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "description": "Docker image name which will be used during Docker build.",
      "replaces": "sd-web-api-image"
    },
    "setupDevCerts": {
      "type": "parameter",
      "description": "Set up HTTPS development certificates for Docker.",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "setupRepo": {
      "type": "parameter",
      "description": "Setup git repository.",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
    "copyrightYear": {
      "type": "generated",
      "generator": "now",
      "replaces": "2025",
      "parameters": {
        "format": "yyyy"
      }
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".azure/**/*",
        ".template.config/**/*",
        "**/*.user",
        "**/*.lock.json",
        "*.nuspec",
        ".vs/**/*",
        "setup-dev-cert.ps1",
        "**/publish/**"
      ],
      "modifiers": [
        {
          "condition": "(setupDevCerts)",
          "include": ["setup-dev-cert.ps1"]
        }
      ]
    }
  ],
  "postActions": [
    {
      "condition": "(setupDevCerts)",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "description": "Set up HTTPS development certificates for Docker.",
      "args": {
        "executable": "powershell",
        "args": "-ExecutionPolicy Bypass -File \"./setup-dev-cert.ps1\""
      },
      "manualInstructions": [
        {
          "text": "Set up HTTPS development certificates for Docker by running the 'setup-dev-cert.ps1' script in the root of this project.\r\n\r\nYou can safely delete the script after that."
        }
      ],
      "continueOnError": true
    },
    {
      "id": "repository-init",
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "condition": "(setupRepo)",
      "description": "Setup git repository.",
      "args": {
        "executable": "powershell",
        "args": "git init --initial-branch main"
      },
      "manualInstructions": [
        {
          "text": "Init git repository"
        }
      ],
      "continueOnError": true
    },
    {
      "id": "restore",
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "args": {
        "files": ["./StackedDeck.WebAPI.Template.sln"]
      },
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "continueOnError": true
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "description": "Format source code documents",
      "args": {
        "executable": "powershell",
        "args": "dotnet format"
      },
      "manualInstructions": [
        {
          "text": "Run 'dotnet format' for this solution from your terminal."
        }
      ],
      "continueOnError": true
    }
  ],
  "guids": [
    "D0E00E10-7934-4159-B278-9F1355EC6E2C",
    "DD4629CF-3C2F-43E3-B551-404220D08A31",
    "E3704DA3-3776-43C7-B999-FC0663644D17",
    "058A0EC5-9EBC-4F68-8D7B-0D5797DAFE31",
    "9A5E16ED-F456-4B76-8CE6-FD9368333218",
    "35FDDBC3-FC40-4B49-903B-7A11F31B91FD",
    "72914754-F078-4CEC-BAB6-1AB8BFABF898"
  ]
}
